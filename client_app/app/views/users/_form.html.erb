
 <%= form_with(model: user, local: true) do |form| %>
	<h1 class="h3 mb-3 font-weight-normal">Edit</h1>
	<%=f.label :name, value: '#{@user["name"]}', class: "sr-only"%>
	<%=f.text_field :name, id: :user_name, class: "form-control", placeholder: "name" %>

	<%=f.label :username, class: "sr-only"%>
	<%=f.text_field :username, id: :user_username, class: "form-control", placeholder: "username" %>

	<%= f.submit 'edit' , class: "btn btn-lg btn-primary btn-block"%>
<% end %>
