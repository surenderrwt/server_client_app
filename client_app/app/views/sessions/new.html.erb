<%=form_with url: login_path do |f| %>
 	<h1 class="h3 mb-3 font-weight-normal">Login page</h1>
	<div class="container">
		<div class="row mb-2">
			<div class="col"><%=label_tag "username:"%></div>
			<div class="col"><%=f.text_field :username, id: :user_username, class: "form-control", placeholder: "username" %></div>
		</div>

		<div class="row mb-2">
			<div class="col"><%=label_tag "password:" %></div>
			<div class="col"><%=f.password_field :password, id: :user_password, class: "form-control", placeholder: "password" %></div>
		</div>
		
		<div class="row mb-2">
			<div class="col"><%= f.submit 'Login', class: "btn btn-primary" %></div>
		</div>
		
		<div class="row mb-2">
			<div class="col"><p>Not have a account yet!!! <%= link_to " yes? get registered ", signup_path, class: "" %> now</p></div>
		</div>
	</div>
<% end %>
